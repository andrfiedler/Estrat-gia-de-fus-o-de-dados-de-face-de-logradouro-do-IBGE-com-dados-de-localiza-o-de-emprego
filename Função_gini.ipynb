   "source": [
    "def gini(df,attr,weight):\n",
    "    a=[]\n",
    "    for i,row in df.sort_values(attr).iterrows():\n",
    "        if row[weight]!=row[weight]: continue\n",
    "        a+=[row[attr]]*int(row[weight])\n",
    "    y=np.cumsum(a)/sum(a)\n",
    "    x=np.linspace(0,1,len(y))\n",
    "    return (0.5-np.trapz(y,x))/.5"
   ]
  }
